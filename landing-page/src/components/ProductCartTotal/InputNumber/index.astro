---
export interface InputProps {
  name: string;
  type: string;
  placeholder: string;
  value: string;
  className?: string;
}

const { name, type, placeholder, value, className = '' } = Astro.props;
---

<input
  name={name}
  type={type}
  aria-describedby='helper-text-explanation'
  class={`${className}`}
  placeholder={placeholder}
  value={value}
  required
/>
